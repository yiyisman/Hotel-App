<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mi_habitacion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yiyisman.hotel.MiHabitacion">


    <TextView
        android:text="Fecha de entrada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fen"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_below="@+id/ha"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <TextView
        android:text="Fecha de Salida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fsa"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/fen"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Habitacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ha"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/hotel"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Me quiero ir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button10"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Calificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cali"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Hotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hotel"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/pla"
        android:layout_above="@+id/hotel"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:id="@+id/imageView15" />

</RelativeLayout>
