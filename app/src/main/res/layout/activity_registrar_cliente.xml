<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yiyisman.hotel.RegistrarCliente">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cliente"
        android:id="@+id/tvTitulo"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Documento"
        android:layout_margin="10dp"
        android:id="@+id/etDocumento"
        android:layout_below="@+id/tvTitulo"
        android:inputType="number" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etDocumento"
        android:layout_margin="10dp"
        android:hint="Nombre"
        android:id="@+id/etNombre"
        android:inputType="textCapSentences" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Apellido"
        android:id="@+id/etHotel"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/etNombre"
        android:layout_alignParentStart="true"
        android:inputType="textCapSentences" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/etTelefono"
        android:hint="Telefono"
        android:layout_below="@+id/etHotel"
        android:layout_alignStart="@+id/etNombre"
        android:layout_marginTop="13dp"
        android:layout_alignEnd="@+id/etHotel"
        android:inputType="phone" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/etUsuario"
        android:hint="Usuario"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/etTelefono"
        android:layout_alignStart="@+id/etTelefono"
        android:layout_alignEnd="@+id/etContra" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/etContra"
        android:hint="ContraseÃ±a"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/etUsuario"
        android:layout_alignEnd="@+id/etTelefono"
        android:layout_alignStart="@+id/etTelefono"
        android:inputType="textPassword" />

    <Button
        android:text="Registar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etContra"
        android:layout_marginTop="12dp"
        android:id="@+id/btRegistrar"
        android:layout_alignStart="@+id/etContra"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Volver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vol"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>